{
  "expo": {
    "name": "CAMORENT Admin",
    "slug": "camorent-admin",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon-favicon.png",
    "userInterfaceStyle": "dark",
    "description": "Admin dashboard for managing camera equipment rentals, bookings, and customer interactions for CAMORENT - Camera on Rent platform.",
    "primaryColor": "#701AD3",
    "splash": {
      "image": "./assets/icon-black.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0F"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.camorent.admin",
      "buildNumber": "1",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSCameraUsageDescription": "This app does not access your camera.",
        "NSPhotoLibraryUsageDescription": "This app does not access your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon-black.png",
        "backgroundColor": "#0A0A0F"
      },
      "package": "com.camorent.admin",
      "versionCode": 1,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.WAKE_LOCK",
        "android.permission.USE_FULL_SCREEN_INTENT",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.ACCESS_NOTIFICATION_POLICY"
      ],
      "useNextNotificationsApi": true,
      "allowBackup": false,
      "jsEngine": "hermes",
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.camorent.admin"
    },
    "web": {
      "favicon": "./assets/icon-favicon.png"
    },
    "plugins": [
      "expo-font",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon-favicon.png",
          "color": "#701AD3",
          "defaultChannel": "booking_requests",
          "sounds": ["./assets/notification_sound.wav"],
          "mode": "production",
          "androidMode": "default",
          "androidCollapsedTitle": "ðŸŽ¬ New Booking Request"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          }
        }
      ],
      "./plugins/withAndroidReleaseKeystore.js"
    ],
    "extra": {
      "eas": {
        "projectId": "be247bc3-bf74-4c3a-a99e-4e7e945f4e84"
      }
    },
    "owner": "hemant-camo",
    "privacy": "public"
  }
}
